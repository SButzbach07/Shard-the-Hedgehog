background
{
    initial_position    0 160
    scroll_speed        0 0
    behavior            LINEAR -15 0
    repeat_x            TRUE
    repeat_y            TRUE

    sprite
    {
        source_file     "images/violet.png"
        source_rect     0 0 960 480
        frame_size      960 480

        animation
        {
            repeat      TRUE
            fps         8
            data        0
        }
    }
}


