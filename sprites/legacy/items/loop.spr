sprite SD_LOOPGREEN
{
    source_file     "images/core.png"
    source_rect     0 0 32 32
    frame_size      32 32
    hot_spot        0 0

    animation 0
    {
        repeat      TRUE
        fps         8
        data        0
    }
}

